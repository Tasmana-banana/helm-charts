{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "assignees": ["christianhuth"],
  "bumpVersion": "patch",
  "additionalBranchPrefix": "{{parentDir}}-",
  "packageRules": [
    {
      "matchFileNames": ["charts/(?<chartName>[^/]+)/**"],
      "groupName": "Updates for chart ${chartName}"
    },
    {
      "matchManagers": [
        "regex",
        "helm-values"
      ],
      "postUpgradeTasks": {
        "commands": [
          "./renovate_update_chart.sh '{{{parentDir}}}' '{{{updateType}}}'"
        ],
        "fileFilters": [
          "**/Chart.yaml"
        ]
      }
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "labels": ["renovate"],
  "timezone": "Europe/Berlin"
}
