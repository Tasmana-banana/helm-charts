{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "additionalBranchPrefix": "{{parentDir}}-",
  "assignees": ["christianhuth"],
  "bumpVersion": "patch",
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchFileNames": ["charts/(?<chartName>[^/]+)/**"],
      "groupName": "Updates for chart ${chartName}"
    },
    {
      "matchManagers": ["custom.regex", "helm-values", "helmv3"],
      "postUpgradeTasks": {
        "commands": ["./renovate_update_chart.sh '{{{parentDir}}}' '{{{updateType}}}' '{{{depName}}}' '{{{newVersion}}}'"],
        "fileFilters": ["**/Chart.yaml"]
      }
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "timezone": "Europe/Berlin"
}
