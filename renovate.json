{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "additionalBranchPrefix": "{{parentDir}}-",
  "assignees": ["christianhuth"],
  "bumpVersion": "patch",
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchFileNames": ["charts/(?<chartName>[^/]+)/**"],
      "groupName": "Updates for chart ${chartName}",
      "postUpgradeTasks": {
        "commands": ["./renovate-update-chart.sh ${chartName} {{updateType}} {{depName}} {{newValue}}"],
        "fileFilters": ["charts/${chartName}/Chart.yaml"]
      }
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "timezone": "Europe/Berlin"
}
