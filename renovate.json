{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "assignees": ["christianhuth"],
  "bumpVersion": "patch",
  "additionalBranchPrefix": "{{parentDir}}-",
  "packageRules": [
    {
      "matchPaths": ["charts/(?<chartName>[^/]+)/**"],
      "groupName": "Updates for chart ${chartName}"
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "labels": ["renovate"],
  "timezone": "Europe/Berlin"
}
